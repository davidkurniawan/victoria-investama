	}

/* Footer */
#footer-wrap{
	position: fixed;
	width: 100%;
	bottom: 0;
	padding: 15px 0 15px 0px;
	background: #121212;
	font-size: 12px;
	}
	
#footer{
	height: 190px;
	padding: 0px;
	background: #121212;
	text-align: left;
	}

#footer .footer-links{
	margin-top: 16px;
	margin-left: 25px;
	border-right: solid 2px #1F1F1F;
	float: left;
	width: 175px;
	text-align: left;
	line-height: 18px;
	font-family: Arial,Helvetica,sans-serif;
	font-size: 12px;
	}

.footer-links a{font-size: 11px;color: #9C9C9C;}
	
#footer .footer-contact{
	margin-top: 16px;
	float: left;
	text-align: left;
	line-height: 18px;
	font-family: Arial,Helvetica,sans-serif;
	font-size: 12px;
	}
	
#footer .footer-OnTradTrial{
	margin-top: 16px;
	float: left;
	text-align: left;
	line-height: 18px;
	font-family: Arial,Helvetica,sans-serif;
	font-size: 12px;
	}	
#copyright{
	float: left;
	margin-top: 35px;
	margin-left: 235px;
	font-size: 12px;
	}
	
#terms{
	float: right;
	margin-top: 35px;
	margin-right: 40px;
	font-size: 12px;
	}
	
#terms a{font-size: 11px;color: #9C9C9C;}

.clear{content: ".";display: block;height: 0px;background: #000;clear: both;}	